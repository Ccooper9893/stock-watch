const { Model, DataTypes } = require('sequelize');

const sequelize = require('../config/connection');

class Portfolio extends Model {};

Portfolio.init(
    {
        id: {
            type: DataTypes.INTEGER,
            allowNull: false,
            primaryKey: true,
            autoIncrement: true,
        },
        balance: {
            type: DataTypes.INTEGER,
            defaultValue: 1000000
        },
        user_id: {
            type: DataTypes.INTEGER,
            allowNull: false,
            references: {
                model: 'user',
                key: 'id',
            },
        },
    },
    {
        //Table options
        sequelize,
        underscored: true,
        freezeTableName: true,
        modelName: 'portfolio',
    },
);

module.exports = Portfolio;